{% extends 'TestEventBundle::layout.html.twig' %}


{% block content %}
    <h1>Guest</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ entity.email }}</td>
            </tr>
            <tr>
                <th>Attending?</th>
                <td>
				{% if entity.isAttending == 1 %}
					<p>Yes</p>
				{% else %}
					<p>No</p>
				{% endif %} 
				</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('test_event') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('test_event_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
