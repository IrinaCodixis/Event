{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Guestss list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Isattending</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('test_event_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.email }}</td>
                <td>
					{% if entity.isAttending == 1 %}
						<p>Yes</p>
					{% else %}
						<p>No</p>
					{% endif %}
					
				</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('test_event_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('test_event_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('test_event_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
